<Window x:Class="AsfWindowsApp.Windows.LoginWindow.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AsfWindowsApp.Windows.LoginWindow"
        mc:Ignorable="d"
        Height="540" Width="768"
        Title="LoginWindow"
        ResizeMode="CanMinimize"
        WindowState="Maximized"
        >


    <Grid>
        <TextBlock Style="{StaticResource H1Style}" HorizontalAlignment="Center" Margin="0,80,0,0">Добро пожаловать</TextBlock>

        <Grid HorizontalAlignment="Center" VerticalAlignment="Center" >
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Button Content ="Войти" Grid.Row="0" 
            Height="54" Width="280"
            Style="{StaticResource Button.Rectangle.Grey}">
            </Button>

            <Button Content ="Зарегестрироваться" Grid.Row="1" 
            Height="54" Width="280" Margin="0 10 0 10"
            Style="{StaticResource Button.Rectangle.Grey}">
            </Button>
        </Grid>
    </Grid>

</Window>
